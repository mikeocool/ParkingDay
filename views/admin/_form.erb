<%= error_messages_for @site %>

<div class="input">
	<label>URL:</label>
	http://www.tbgparkingday.com/<%= text_field :slug %>
</div>

<div class="input">
	<label>Site Title:</label>
	<%= text_field :name %>
</div>

<div class="input">
	<label>Template:</label>
	<%= radio_button :template_id, :value => '1' %> Template 1
	<%= radio_button :template_id, :value => '2' %> Template 2
</div>

<div class="input">
	<label>Favorite Color:</label>
	<%= text_field :favorite_color, {:class => 'color'} %>
</div>

<div class="input">
	<label>Location:</label>
	<%= text_field :location %>
</div>

<div class="input">
	<label>Question for the Internet:</label>
	<%= text_field :question %>
</div>

<div class="input">
	<label>Random Thing 1:</label>
	<%= text_field :fact_one %>
</div>

<div class="input">
	<label>Random Thing 2:</label>
	<%= text_field :fact_two %>
</div>

<div class="input">
	<label>Random Thing 3:</label>
	<%= text_field :fact_three %>
</div>

<div class="input">
	<label>Link Title:</label>
	<%= text_field :link_title %>
</div>

<div class="input">
	<label>Link URL:</label>
	<%= text_field :link_url %>
</div>



<button type="submit">Save Site</button>